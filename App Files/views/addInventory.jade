extends layout

block content
  h2 Add Inventory Item
  form(name='addInventory', action='/createInventory', method='POST', role='form')
    div.form-group
      label Tool Name
      select(class='form-control', name='Name')
        each item in toolList
          option(value='#{item._id}') #{item.MTName} 
          //pass id number and use name for readibility
    div.form-group
      label Serial number
      input(class='form-control', name='Serial', type='text')
    div.form-group
      label Install Date
      input(class='form-control', name='Install', type='date')    
    div.form-group
      label Condition
      select(class='form-control' name='Condition')
        option(value='New') New
        option(value='Good') Good
        option(value='Fair') Fair
        option(value='Poor') Poor
        option(Value='Broken') Broken
    div.form-group  
      input(class='btn', type='submit', value='Submit')      